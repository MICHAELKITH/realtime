<p class="text-green-500"><%= notice %></p>

<%= render @post %>

<div class="mt-4">
  <%= link_to "Edit this post", edit_post_path(@post), class: "text-blue-500 hover:text-blue-700 mr-4" %> |
  <%= link_to "Back to posts", posts_path, class: "text-blue-500 hover:text-blue-700 mr-4" %>
  
  <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
</div>
